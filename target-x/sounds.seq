;*****************;*               *;* SOUND EFFECTS *;*               *;*****************;SOUNDE LDA STABX ; DEC FOR EXPLOSION BEQ NEDCS DEC STABX LDA STABX STA SOUND2;NEDCS LDA NEWNMX ; CHECK BEEPS FOR NEW WAVE BEQ STEPNI; LDA NEWTIM BNE DNTDRV; LDA #$80 EOR STABZ;DOBEEP STA STABZ ; SET FREQUENCY; LDA #0 STA SOUND3+4 LDX #5;SNDOFB LDA STABZ,X STA SOUND3+1,X DEX BPL SNDOFB BMI DNTDRV  STEPNI LDA MERNMX   BEQ NXTSND LDA MERTIM BNE DNTDRV LDA #$60 CMP STABZ BNE DOBEEP LDA #$20 ; MAKE SURE 0/$40 FLIP BNE DOBEEP;NXTSND ; SOUND FOR PODS; LDA SATALY ; SOUND FOR SATALIGHT BEQ DNTDR4 LDA SATTYP BMI DNTDR4 ; NO UFO, CLEAR VOICE3+4; LDX SATCUS LDA SNDSDR BEQ GOINUP; DEX .BYTE $24GOINUP INX; CPX #10 BCC DFLIP CPX #16 BCC STSA;DFLIP LDA SNDSDR EOR #1 STA SNDSDR; AND #0 ; CLEAR VOICE FOR FAST BEEP BUG STA SOUND3+4 ; IF YOU FIND BUG, LET ME KNOW;STSA STX SOUND3+1 STX SATCUS; LDX #4P2TSTS LDA STABQ,X STA SOUND3+2,X DEX BPL P2TSTS;DNTDRV LDA NEWNMX ; CHECK/DEC NEW BOMB TIMER BEQ DNTDR2 DEC NEWTIM BPL DNTDR2 DEC NEWNMX BNE DONNA AND #0 STA SOUND3+4;DONNA LDA #$40 STA NEWTIM;DNTDR2 LDA MERNMX ; CHECK/DEC MERVE TIMER BEQ DOTRE DEC MERTIM BPL DOTRE DEC MERNMX LDA #4 STA MERTIM;DOTRE RTS;DNTDR4 AND #0 STA SOUND3+4 ; NO EFFECTS, CLEAR VOICE BEQ DNTDRV;STABZ .BYTE 0,0,0,$21,$0F,0STABQ .BYTE $0,0,$11,$0,$F0;NEWTIM .BYTE 0 ; TIMERNEWNMX .BYTE 1 ; COUNTERMERTIM .BYTE 0 ; TIMERMERNMX .BYTE 1 ; COUNTERSATCUS .BYTE 12 ; WOP/WOP FOR SATALIGHTSNDSDR .BYTE 0 ; UP/DOWN DIRECTION FOR WOP/WOP; .FILE WORDS.SRC